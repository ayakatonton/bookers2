<h2>User Info</h2>
<%= image_tag user.get_profile_image(100,100) %>
<table class="table">
  <tbody>
    <tr>
      <th>name</th>
      <td><%= user.name %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user.introduction %></td>
    </tr>
   
    <tr>
      <th>Follows <i class="fa-solid fa-person-rays"></i></th>
      <td>
        <%= link_to follows_user_path(user) do %>
          <h6><%= user.followings.count %> </h6>
          
        <% end %> 
      </td>
    </tr>
    <tr>  
      <th>Followers <i class="fa-solid fa-street-view"></i></th>
      <td>  
        <%= link_to followers_user_path(user) do %>
          <h6><%= user.followers.count %> </h6>
        <% end %>
      </td>
      
    </tr> 
      <% if current_user != user %>
          <% if current_user.following?(user) %>
            <%= link_to user_relationships_path(user.id), method: :delete, class: "btn btn-secondary" do %>
              <i class="fa-solid fa-user-minus"></i>
            <% end %>
          <% else %>
            <%= link_to user_relationships_path(user.id), method: :post, class:"btn btn-info" do %>
              <i class="fa-solid fa-user-plus"></i>
            <% end %>
          <% end %>
      <% end %>
      </td>
  </tbody>
</table>
<%= link_to edit_user_path(user) , class:"nav-link btn btn-outline-secondary btn-sm" do %>
  <i class="fa-solid fa-user-gear"></i>
<% end %>
   