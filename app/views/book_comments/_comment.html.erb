<table class="table">
  
  <% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
      <%= image_tag book_comment.user.get_profile_image(80,80) %>
      <br>
      <%= link_to book_comment.user.name, user_path(book_comment.user) %>
    </td>
   <td> <%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
   <td> <%= book_comment.comment %> </td>
  
    
    <% if book_comment.user_id == @current_user.id %> 
      <td>
       <%= link_to "削除", "/books/#{book.id}/book_comments/#{book_comment.id}", method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %>
      </td> 
    <% end %>
  </tr>
  <% end %>
</table>

  <%= form_with model: [book, book_comment] do |f| %>
    <%= f.text_area :comment, placeholder: "コメントをここに", class:"form-control" %>
    <%= f.submit "送信する", class:"btn btn-info" %>
  <% end %>
