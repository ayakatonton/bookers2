<div class='container px-5 px-sm-0'>
  <div class="row">
    <div class="col-md-8 offset-md-2"> 
      <h2>Follow Users</h2>
      <table class="table">
        <thead>
            <tr>
              <th scope="col">image</th>
              <th scope="col">name</th>
              <th scope="col">follow</th>
              <th scope="col">follower</th>
              <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>
              <%= image_tag user.get_profile_image(80,80) %>
            </td>
            <td><%= user.name %></td>
            <td><i class="fa-solid fa-person-rays"></i> <%= user.followings.count %></td>
            <td><i class="fa-solid fa-street-view"></i> <%= user.followers.count %></td>
            <td><%= link_to "Show", user_path(user), class: "btn btn-info" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
